# Learn more about configuring your app at https://shopify.dev/docs/apps/tools/cli/configuration
#
# IMPORTANT: Copy this file to shopify.app.toml and replace the values with your actual app credentials
# The shopify.app.toml file is gitignored to prevent committing secrets

client_id = "your-shopify-api-key-here"
name = "feed-manager"
handle = "feed-manager-2"
application_url = "https://your-app-url.trycloudflare.com"
embedded = true

[build]
automatically_update_urls_on_dev = true

[webhooks]
api_version = "2025-07"

  [[webhooks.subscriptions]]
  topics = [ "app/uninstalled" ]
  uri = "/webhooks/app/uninstalled"

  [[webhooks.subscriptions]]
  topics = [ "app/scopes_update" ]
  uri = "/webhooks/app/scopes_update"

[access_scopes]
# Learn more at https://shopify.dev/docs/apps/tools/cli/configuration#access_scopes
scopes = "write_products,read_products,read_product_listings,read_locales,read_markets"

[auth]
redirect_urls = ["https://your-app-url.trycloudflare.com/auth/callback", "https://your-app-url.trycloudflare.com/auth/shopify/callback", "https://your-app-url.trycloudflare.com/api/auth/callback"]

[pos]
embedded = false
